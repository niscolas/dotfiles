configuration {
  combi-modi: "window,drun,run";

  filebrowser {
      directories-first: true;
      sorting-method:    "name";
  }

  icon-theme: "Papirus";
  modi: "combi#brightness:~/.config/rofi/scripts/brightness_menu.sh#power:~/.config/rofi/scripts/powermenu.sh#xrandr layout:~/.config/rofi/scripts/xrandrlayoutmenu.sh";

  timeout {
      action: "kb-cancel";
      delay:  0;
  }

  sidebar-mode: true;
  show-icons: true;
}

@theme "gruvbox.rasi"
